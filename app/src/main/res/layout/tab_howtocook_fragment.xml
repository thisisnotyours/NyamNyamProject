<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#759AF8">

    <TextView
        android:id="@+id/tv_howtocook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOW TO"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="#ffffffff"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COOK"

        android:textSize="24sp"
        android:textColor="#ffffffff"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/tv_howtocook"
        android:layout_marginLeft="8dp"/>





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:background="@drawable/recipe_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_cat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VEGAN"
                    android:textStyle="bold"
                    android:textColor="#38A13C"
                    android:padding="4dp"
                    android:background="@drawable/background3"
                    android:layout_marginTop="110dp"
                    android:layout_marginLeft="80dp"/>

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sanchae Bibimbap"
                    android:textColor="@android:color/black"
                    android:textSize="23sp"
                    android:textStyle="bold"
                    android:layout_below="@id/tv_cat"
                    android:layout_marginLeft="80dp"/>
                <TextView
                    android:id="@+id/tv_sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="산채 비빔밥"
                    android:layout_below="@id/tv_title"
                    android:layout_marginLeft="80dp"/>
                <ImageView
                    android:id="@+id/iv_headset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_headset_grey_40__dp"
                    android:layout_toRightOf="@id/tv_title"
                    android:layout_marginTop="135dp"
                    android:layout_marginLeft="10dp"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="30dp">
                <TextView
                    android:id="@+id/tv_ingredient_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INGREDIENT"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:id="@+id/tv_ing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sfjdkfljskdflsfjdkfljskdfl"
                    android:inputType="textMultiLine"
                    android:layout_below="@id/tv_ingredient_title"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="30dp">
                <TextView
                    android:id="@+id/tv_step_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STEP"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:id="@+id/tv_step"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dfjsdlfkdf"
                    android:inputType="textMultiLine"
                    android:layout_below="@id/tv_step_title"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

















    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_food"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/bibimbap"
        android:layout_marginTop="70dp"/>
</RelativeLayout>