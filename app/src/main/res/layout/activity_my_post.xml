<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyPostActivity">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back_black_40dp"
        android:layout_marginTop="10dp"
        android:onClick="clickBack"/>

    <ImageView
        android:id="@+id/iv_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_mypost_person_grey_40dp"
        android:layout_toRightOf="@id/back"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_your_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_person"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:text="My Post"
        android:layout_marginLeft="10dp"/>


    <ImageView
        android:id="@+id/iv_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_list_30dp"
        android:layout_toLeftOf="@id/iv_grid"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"/>

    <ImageView
        android:id="@+id/iv_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_grid_30dp"
        android:layout_marginTop="16dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"/>




    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/back">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginTop="20dp">
        </androidx.recyclerview.widget.RecyclerView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    <TextView
        android:id="@+id/tv_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post"
        android:textColor="#54555A"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="226dp"
        android:layout_marginEnd="98dp"
        android:elevation="5dp"
        android:background="@drawable/fab_bg"
        android:padding="6dp"
        android:visibility="invisible"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab3_post"
        app:borderWidth="2dp"
        app:backgroundTint="#FF5722"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="210dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="#FF5722"
        android:src="@drawable/ic_edit_white_24dp"
        android:clickable="true"
        android:focusable="true"
        app:pressedTranslationZ="12dp"
        app:fabCustomSize="60dp"
        android:background="?attr/selectableItemBackground"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tv_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="146dp"
        android:layout_marginEnd="98dp"
        android:background="@drawable/fab_bg"
        android:elevation="5dp"
        android:text="Board"
        android:padding="6dp"
        android:textColor="#54555A"
        android:visibility="invisible"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab2_board"
        app:borderWidth="2dp"
        app:backgroundTint="#FFC107"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFC107"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="126dp"
        android:layout_marginEnd="30dp"
        android:src="@drawable/ic_star_white_24dp"
        android:clickable="true"
        android:elevation="16dp"
        android:focusable="true"
        app:pressedTranslationZ="12dp"
        app:fabCustomSize="60dp"
        android:background="?attr/selectableItemBackground"
        android:visibility="invisible"/>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        app:borderWidth="2dp"
        app:backgroundTint="#759AF8"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="24dp"
        android:clickable="true"
        android:elevation="16dp"
        android:focusable="true"
        app:pressedTranslationZ="12dp"
        app:fabCustomSize="70dp"
        android:src="@drawable/ic_restaurant_white_60dp"
        android:backgroundTint="#759AF8"
        android:visibility="visible"
        android:background="?attr/selectableItemBackground"/>

</RelativeLayout>