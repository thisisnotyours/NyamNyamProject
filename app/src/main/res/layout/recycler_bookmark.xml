<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:elevation="8dp"
        android:padding="15dp"
        android:src="@drawable/bibimbap"/>   <!--android:elevation="14dp"  다시-->
    <TextView
        android:id="@+id/tv_food_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VEGAN"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_toRightOf="@id/civ"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"/>
    <TextView
        android:id="@+id/tv_food_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="this is for vegitarian"
        android:layout_toRightOf="@id/civ"
        android:layout_centerInParent="true"
        android:layout_below="@id/tv_food_title"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="30dp"/>

    <ImageView
        android:id="@+id/delete_fav"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_delete_grey_24dp"
        android:layout_marginTop="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"/>

</RelativeLayout>